@model ForgotPasswordViewModel
@{
    Layout = "_MemberLayout";
    ViewData["Title"] = "Forgot your password?";
}

<form asp-controller="MemberAccount" asp-action="ForgotPassword" method="post" class="nobottommargin">
	<h3>Forgot your password?</h3>
	
	<div class="col_full">
		<label asp-for="Email">Enter your email:</label>
		<input asp-for="Email" class="form-control not-dark" />
		<span asp-validation-for="Email" class="text-danger"></span>
	</div>
	
	
	<div class="col_full nobottommargin">
		<div class="text-right">
			<button type="submit" class="button button-3d button-amber nomargin fleft">Send</button>
			<a asp-action="Login">Login -></a>
		</div>
	</div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_MemberValidationScriptsPartial"); }
}
